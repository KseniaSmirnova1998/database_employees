<Page x:Class="Assignment.Log_inPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Авторизация" PreviewKeyDown="Page_PreviewKeyDown" Height="300" Width="481.513" Background="#FFE1F3FF">
    <Grid>
        <Label x:Name="label_info" Content ="Для получения полного доступа к базе данных необходимо войти в систему." HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="454"/>
        <Button x:Name="button_login" Content ="Войти" HorizontalAlignment="Left" Margin="187,211,0,0" VerticalAlignment="Top" Width="100" Height="31" Click="button_login_Click"/>
        <TextBox x:Name="textBox_login" HorizontalAlignment="Left" Height="20" Margin="127,81,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="216" Foreground="DarkGray" FontSize="13"  />
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="20" Margin="127,141,0,0"  VerticalAlignment="Top" Width="216" Foreground="DarkGray" FontSize="13"/>

    </Grid>
</Page>
