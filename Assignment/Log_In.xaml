<Window x:Class="Assignment.Log_In"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="481.513" Background="#FFE1F3FF">
    <Grid>
        <Label x:Name="label_info" Content="Для получения полного доступа к базе данных, необходимо войти в систему." HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="454"/>
        <Button x:Name="button_login" Content="Войти" HorizontalAlignment="Left" Margin="78,212,0,0" VerticalAlignment="Top" Width="96" Height="31"/>
        <Button x:Name="button_cancel" Content="Отмена" HorizontalAlignment="Left" Margin="302,212,0,0" VerticalAlignment="Top" Width="95" Height="31"/>
        <TextBox x:Name="textBox_login" HorizontalAlignment="Left" Height="20" Margin="127,81,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="216" Foreground="DarkGray" FontSize="13"/>
        <TextBox x:Name="textBox1_password" HorizontalAlignment="Left" Height="20" Margin="127,141,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="216" Foreground="DarkGray" FontSize="13"/>

    </Grid>
</Window>
